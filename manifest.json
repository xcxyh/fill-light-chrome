{
    "manifest_version": 3,
    "name": "Fill Light Extension",
    "version": "1.0.0",
    "description": "A simple fill light extension for Chrome",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "content/content.css"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}